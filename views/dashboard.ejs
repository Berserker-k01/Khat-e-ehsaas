      }

      50% {
        transform: translateY(-5px);
      }
    }

    .letters-btn:hover {
      transform: translateY(-5px) scale(1.05);
      box-shadow: 0 12px 40px rgba(16, 185, 129, 0.6);
    }

    /* Unconnected State */
    #unconnected-state {
