<%- include('partials/header') %>

  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      background: radial-gradient(ellipse at bottom, #1b2735 0%, #090a0f 100%);
      overflow-x: hidden;
      min-height: 100vh;
      position: relative;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 1rem;
    }

    /* High Quality Starfield */
    #starfield {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: 0;
    }

    /* Enhanced Moon */
    .moon {
      position: fixed;
      top: 5%;
      right: 5%;
      width: 100px;
      height: 100px;
      border-radius: 50%;
      background: radial-gradient(circle at 30% 30%, #fffef0, #f4e4c1 60%, #dcc89a);
      box-shadow:
        0 0 50px 15px rgba(255, 250, 200, 0.4),
        0 0 80px 30px rgba(255, 250, 200, 0.2),
        inset -8px -8px 15px rgba(0, 0, 0, 0.1);
      animation: moonGlow 6s ease-in-out infinite;
      z-index: 2;
    }

    @keyframes moonGlow {

      0%,
      100% {
        transform: scale(1);
        box-shadow: 0 0 50px 15px rgba(255, 250, 200, 0.4), 0 0 80px 30px rgba(255, 250, 200, 0.2);
      }

      50% {
        transform: scale(1.08);
        box-shadow: 0 0 70px 20px rgba(255, 250, 200, 0.6), 0 0 110px 40px rgba(255, 250, 200, 0.3);
      }
    }

    /* Fireworks Canvas */
    #fireworks-canvas {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: 1;
      pointer-events: none;
      display: none;
    }

    /* Floating Hearts Background */
    .floating-heart {
      position: fixed;
      pointer-events: none;
      z-index: 1;
      animation: floatUp 12s linear infinite;
      opacity: 0;
    }

    @keyframes floatUp {
      0% {
        transform: translateY(100vh) rotate(0deg) scale(0.8);
        opacity: 0;
      }

      10% {
        opacity: 0.6;
      }

      90% {
        opacity: 0.6;
      }

      100% {
        transform: translateY(-150px) rotate(360deg) scale(1.3);
        opacity: 0;
      }
    }

    /* Dashboard Container */
    #dashboard-container {
      position: relative;
      z-index: 10;
      width: 100%;
      max-width: 550px;
      background: rgba(30, 20, 50, 0.4);
      backdrop-filter: blur(30px) saturate(150%);
      -webkit-backdrop-filter: blur(30px) saturate(150%);
      border-radius: 30px;
      padding: 2rem 1.5rem;
      box-shadow:
        0 8px 32px 0 rgba(255, 64, 129, 0.3),
        0 20px 80px 0 rgba(138, 43, 226, 0.2),
        inset 0 0 60px rgba(255, 105, 180, 0.05);
      border: 2px solid rgba(255, 105, 180, 0.2);
      opacity: 0;
      transform: scale(0.9) translateY(30px);
    }

    .welcome-title {
      font-family: 'Dancing Script', cursive;
      font-size: clamp(2rem, 5vw, 3rem);
      text-align: center;
      background: linear-gradient(135deg, #ff6b9d 0%, #c471ed 50%, #f64f59 100%);
      -webkit-background-clip: text;
      -moz-background-clip: text;
      background-clip: text;
      -webkit-text-fill-color: transparent;
      color: transparent;
      filter: drop-shadow(0 0 30px rgba(255, 105, 180, 0.6));
      margin-bottom: 0.3rem;
      animation: titleShine 4s ease-in-out infinite;
      word-wrap: break-word;
    }

    @keyframes titleShine {

      0%,
      100% {
        filter: drop-shadow(0 0 30px rgba(255, 105, 180, 0.6));
      }

      50% {
        filter: drop-shadow(0 0 50px rgba(199, 113, 237, 0.8));
      }
    }

    .welcome-subtitle {
      font-family: 'Caveat', cursive;
      font-size: clamp(1.1rem, 3vw, 1.4rem);
      text-align: center;
      color: #ffd5e1;
      margin-bottom: 1.5rem;
      text-shadow: 0 0 15px rgba(255, 105, 180, 0.4);
    }

    .username-display {
      text-transform: capitalize;
      background: linear-gradient(135deg, #ff4081, #ff6b9d);
      -webkit-background-clip: text;
      -moz-background-clip: text;
      background-clip: text;
      -webkit-text-fill-color: transparent;
      color: transparent;
      word-break: break-word;
    }

    /* Connection Code Box */
    .code-box {
      background: rgba(255, 64, 129, 0.1);
      border: 2px solid rgba(255, 105, 180, 0.3);
      border-radius: 20px;
      padding: 1.2rem;
      margin: 1.5rem 0;
      text-align: center;
      box-shadow: 0 4px 20px rgba(255, 64, 129, 0.2);
    }

    .code-label {
      font-family: 'Caveat', cursive;
      font-size: clamp(1rem, 2.5vw, 1.2rem);
      color: #ffa8c5;
      margin-bottom: 0.5rem;
    }

    .code-value {
      font-family: 'Courier New', monospace;
      font-size: clamp(1.3rem, 4vw, 1.8rem);
      font-weight: 700;
      color: #ff4081;
      letter-spacing: 0.2rem;
      text-shadow: 0 0 15px rgba(255, 64, 129, 0.6);
      animation: codePulse 2s ease-in-out infinite;
      cursor: pointer;
      word-break: break-all;
      transition: transform 0.2s ease;
    }

    .code-value:hover {
      transform: scale(1.05);
    }

    @keyframes codePulse {

      0%,
      100% {
        transform: scale(1);
      }

      50% {
        transform: scale(1.03);
      }
    }

    .code-hint {
      font-size: 0.85rem;
      color: rgba(255, 182, 193, 0.6);
      margin-top: 0.5rem;
      font-family: 'Caveat', cursive;
    }

