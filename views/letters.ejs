    }

    .letter-content {
      background: rgba(255, 255, 255, 0.08);
      border-radius: 20px;
      padding: 2rem;
      margin-bottom: 2rem;
      border: 2px solid rgba(255, 182, 193, 0.3);
      box-shadow: inset 0 2px 15px rgba(0, 0, 0, 0.3);
    }

    .letter-from {
