<%- include('partials/header') %>

  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      background: radial-gradient(ellipse at bottom, #1b2735 0%, #090a0f 100%);
      overflow-x: hidden;
      min-height: 100vh;
      position: relative;
    }

    /* High Quality Starfield */
    #starfield {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: 0;
    }

    /* Enhanced Moon */
    .moon {
      position: fixed;
      top: 5%;
      right: 5%;
      width: 120px;
      height: 120px;
      border-radius: 50%;
      background: radial-gradient(circle at 30% 30%, #fffef0, #f4e4c1 60%, #dcc89a);
      box-shadow:
        0 0 60px 20px rgba(255, 250, 200, 0.4),
        0 0 100px 40px rgba(255, 250, 200, 0.2),
        inset -10px -10px 20px rgba(0, 0, 0, 0.1);
      animation: moonGlow 6s ease-in-out infinite;
      z-index: 2;
    }

    @keyframes moonGlow {

      0%,
      100% {
        transform: scale(1);
        box-shadow: 0 0 60px 20px rgba(255, 250, 200, 0.4), 0 0 100px 40px rgba(255, 250, 200, 0.2);
      }

      50% {
        transform: scale(1.1);
        box-shadow: 0 0 80px 30px rgba(255, 250, 200, 0.6), 0 0 140px 60px rgba(255, 250, 200, 0.3);
      }
    }

    /* Floating Hearts */
    .floating-heart {
      position: fixed;
      pointer-events: none;
      z-index: 1;
      animation: floatUp 12s linear infinite;
      opacity: 0;
    }

    @keyframes floatUp {
      0% {
        transform: translateY(100vh) rotate(0deg) scale(0.8);
        opacity: 0;
      }

      10% {
        opacity: 0.6;
      }

      90% {
        opacity: 0.6;
      }

      100% {
        transform: translateY(-150px) rotate(360deg) scale(1.3);
        opacity: 0;
      }
    }

    /* Main Container */
    .letters-container {
      position: relative;
      z-index: 10;
      max-width: 100%;
      padding: 2rem 1rem;
      opacity: 0;
      transform: translateY(30px);
    }

    /* Page Header */
    .page-header {
      text-align: center;
      margin-bottom: 3rem;
    }

    .page-title {
      font-family: 'Dancing Script', cursive;
      font-size: clamp(2.5rem, 6vw, 4.5rem);
      background: linear-gradient(135deg, #ff6b9d 0%, #c471ed 50%, #f64f59 100%);
      -webkit-background-clip: text;
      -moz-background-clip: text;
      background-clip: text;
      -webkit-text-fill-color: transparent;
      color: transparent;
      filter: drop-shadow(0 0 40px rgba(255, 105, 180, 0.6));
      margin-bottom: 1.5rem;
      animation: titleShine 4s ease-in-out infinite;
    }

    @keyframes titleShine {

      0%,
      100% {
        filter: drop-shadow(0 0 40px rgba(255, 105, 180, 0.6));
      }

      50% {
        filter: drop-shadow(0 0 60px rgba(199, 113, 237, 0.8));
      }
    }

    .write-btn {
      display: inline-block;
      background: linear-gradient(135deg, #ff1744 0%, #ff4081 50%, #ff6b9d 100%);
      background-size: 200% 200%;
      color: white;
      font-size: clamp(1.1rem, 2.5vw, 1.3rem);
      font-weight: 700;
      padding: 1.1rem 2.5rem;
      border-radius: 50px;
      text-decoration: none;
      box-shadow: 0 10px 40px rgba(255, 23, 68, 0.5);
      transition: all 0.4s ease;
      animation: buttonGradient 3s ease infinite;
    }

    @keyframes buttonGradient {

      0%,
      100% {
        background-position: 0% 50%;
      }

      50% {
        background-position: 100% 50%;
      }
    }

    .write-btn:hover {
      transform: translateY(-5px) scale(1.05);
      box-shadow: 0 15px 60px rgba(255, 23, 68, 0.7);
    }

    /* Horizontal Scroll Container */
    .envelopes-scroll-container {
      overflow-x: auto;
      overflow-y: hidden;
      padding: 2rem 0;
      margin: 2rem 0;
      scrollbar-width: thin;
      scrollbar-color: rgba(255, 105, 180, 0.5) rgba(255, 255, 255, 0.1);
    }

    .envelopes-scroll-container::-webkit-scrollbar {
      height: 10px;
    }

    .envelopes-scroll-container::-webkit-scrollbar-track {
      background: rgba(255, 255, 255, 0.05);
      border-radius: 10px;
    }

    .envelopes-scroll-container::-webkit-scrollbar-thumb {
      background: rgba(255, 105, 180, 0.5);
      border-radius: 10px;
    }

    .envelopes-scroll-container::-webkit-scrollbar-thumb:hover {
      background: rgba(255, 105, 180, 0.7);
    }

    /* Envelopes Grid - Horizontal */
    .envelopes-grid {
      display: flex;
      gap: 2rem;
      padding: 0 1rem;
      min-width: min-content;
    }

    /* Envelope Design */
    .envelope-card {
      position: relative;
      width: 320px;
      height: 280px;
      flex-shrink: 0;
      cursor: pointer;
      transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
      transform-style: preserve-3d;
    }

    .envelope-card:hover {
      transform: translateY(-15px) scale(1.05);
    }

    /* Envelope Back */
    .envelope-back {
      position: absolute;
      width: 100%;
      height: 100%;
      background: linear-gradient(135deg, rgba(255, 107, 157, 0.3), rgba(196, 113, 237, 0.3));
      border: 3px solid rgba(255, 105, 180, 0.5);
      border-radius: 15px;
      box-shadow: 0 15px 50px rgba(255, 64, 129, 0.5);
      backdrop-filter: blur(20px);
      -webkit-backdrop-filter: blur(20px);
    }

    /* Envelope Flap */
    .envelope-flap {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 50%;
      background: linear-gradient(135deg, rgba(255, 64, 129, 0.4), rgba(196, 113, 237, 0.4));
      border-left: 3px solid rgba(255, 105, 180, 0.6);
      border-right: 3px solid rgba(255, 105, 180, 0.6);
      border-top: 3px solid rgba(255, 105, 180, 0.6);
      clip-path: polygon(0 0, 50% 60%, 100% 0);
      transform-origin: top center;
      transition: transform 0.5s ease;
      z-index: 2;
    }

    .envelope-card:hover .envelope-flap {
      transform: rotateX(-180deg);
    }

    /* Envelope Content */
    .envelope-content {
      position: absolute;
      width: 90%;
      height: 85%;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      background: rgba(30, 20, 50, 0.8);
      backdrop-filter: blur(15px);
      -webkit-backdrop-filter: blur(15px);
      border-radius: 12px;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      padding: 1.5rem;
      text-align: center;
      z-index: 1;
    }

    .envelope-icon {
      font-size: 4rem;
      margin-bottom: 1rem;
      animation: float 3s ease-in-out infinite;
      filter: drop-shadow(0 0 25px rgba(255, 105, 180, 0.6));
    }

    @keyframes float {

      0%,
      100% {
        transform: translateY(0);
      }

      50% {
        transform: translateY(-15px);
      }
    }

    .envelope-title {
      font-family: 'Caveat', cursive;
      font-size: clamp(1.3rem, 2.5vw, 1.6rem);
      color: #ffa8c5;
      margin-bottom: 0.8rem;
      text-shadow: 0 0 25px rgba(255, 105, 180, 0.7);
      line-height: 1.4;
    }

    .letters-count {
      font-family: 'Courier New', monospace;
      font-size: 1.1rem;
      color: rgba(255, 182, 193, 0.9);
      font-weight: 700;
      background: rgba(255, 105, 180, 0.2);
      padding: 0.3rem 1rem;
      border-radius: 20px;
    }

    /* Letter Modal */
    #letter-modal {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0, 0, 0, 0.95);
      display: none;
      align-items: center;
      justify-content: center;
      z-index: 100;
      padding: 1rem;
    }

    .modal-content {
      position: relative;
      background: rgba(30, 20, 50, 0.85);
      backdrop-filter: blur(40px) saturate(180%);
