  <script>
    // ============ HIGH QUALITY STARFIELD (NOT DISTORTED) ============
    const starCanvas = document.getElementById('starfield');
    const starCtx = starCanvas.getContext('2d');
    let starW, starH;

    function resizeCanvas() {
      starW = window.innerWidth;
      starH = window.innerHeight;
      starCanvas.width = starW;
      starCanvas.height = starH;
    }
    window.addEventListener('resize', resizeCanvas);
    resizeCanvas();

    class Star {
      constructor() {
        this.reset();
      }

      reset() {
        this.x = Math.random() * starW;
        this.y = Math.random() * starH;
        this.radius = 0.8 + Math.random() * 2.2;
        this.vx = (Math.random() - 0.5) * 0.15;
        this.vy = (Math.random() - 0.5) * 0.15;
        this.opacity = 0.4 + Math.random() * 0.6;
        this.twinkleSpeed = 0.015 + Math.random() * 0.03;
      }

      update() {
        this.opacity += (Math.random() - 0.5) * this.twinkleSpeed;
        this.opacity = Math.max(0.3, Math.min(1, this.opacity));

        this.x += this.vx;
        this.y += this.vy;

        if (this.x < 0) this.x = starW;
        if (this.x > starW) this.x = 0;
        if (this.y < 0) this.y = starH;
        if (this.y > starH) this.y = 0;
      }

      draw() {
        starCtx.save();
        starCtx.beginPath();
        starCtx.arc(this.x, this.y, this.radius, 0, Math.PI * 2);
        starCtx.fillStyle = `rgba(255, 255, 255, ${this.opacity})`;
        starCtx.shadowBlur = 20;
        starCtx.shadowColor = `rgba(255, 255, 255, ${this.opacity * 0.8})`;
        starCtx.fill();
        starCtx.restore();
      }
    }

    const stars = Array.from({ length: 300 }, () => new Star());

    function animateStars() {
      starCtx.clearRect(0, 0, starW, starH);
      stars.forEach(star => {
        star.update();
        star.draw();
      });
      requestAnimationFrame(animateStars);
    }
    animateStars();

    // ============ FLOATING HEARTS (HIGH QUALITY) ============
    function createFloatingHeart() {
      const heart = document.createElement('div');
      heart.className = 'floating-heart';
      heart.textContent = ['‚ù§Ô∏è', 'üíï', 'üíñ', 'üíó', 'üíì'][Math.floor(Math.random() * 5)];
      heart.style.left = Math.random() * 100 + '%';
      heart.style.fontSize = (18 + Math.random() * 22) + 'px';
      heart.style.animationDuration = (9 + Math.random() * 6) + 's';
      heart.style.animationDelay = Math.random() * 3 + 's';
      document.body.appendChild(heart);

      setTimeout(() => heart.remove(), 16000);
    }

    setInterval(createFloatingHeart, 700);

    // ============ INITIAL ANIMATION ============
    gsap.to('.letters-container', {
      opacity: 1,
      y: 0,
      duration: 1.5,
      delay: 0.5,
      ease: 'elastic.out(1, 0.6)'
    });

    gsap.to('.page-element', {
      opacity: 1,
      y: 0,
      stagger: 0.2,
      duration: 0.8,
      delay: 1,
      ease: 'power2.out'
    });

    // ============ MODAL FUNCTIONS ============
    let currentCategory = '';
    let currentLetterIndex = 0;
    let currentLetters = [];

    const categoryTitles = {
      'miss-me': 'Ouvre quand je te manque... üíï',
      'need-motivation': 'Ouvre quand tu as besoin de motivation... ‚ú®',
      'angry-at-me': "Ouvre quand tu es f√¢ch√©(e) contre moi... üåπ",
      'feel-lonely': 'Ouvre quand tu te sens seul(e)... ü§ó',
      'just-because': 'Ouvre juste comme √ßa... üíñ'
    };

    function openEnvelope(category) {
      currentCategory = category;
      currentLetterIndex = 0;

      if (window.lettersData && window.lettersData[category]) {
        currentLetters = window.lettersData[category];
      } else {
        currentLetters = [];
      }

      const modal = document.getElementById('letter-modal');
      const modalContent = modal.querySelector('.modal-content');

      modal.style.display = 'flex';

      gsap.fromTo(modalContent,
        { scale: 0.85, opacity: 0, rotateY: -10 },
        { scale: 1, opacity: 1, rotateY: 0, duration: 0.7, ease: 'back.out(1.7)' }
      );

      document.getElementById('modal-category').textContent = categoryTitles[category];
      displayCurrentLetter();
    }

    function closeModal() {
      const modal = document.getElementById('letter-modal');
      const modalContent = modal.querySelector('.modal-content');

      gsap.to(modalContent, {
        scale: 0.85,
        opacity: 0,
        rotateY: 10,
        duration: 0.5,
        ease: 'power2.in',
        onComplete: () => {
          modal.style.display = 'none';
        }
      });
    }

    function displayCurrentLetter() {
      const letterDisplay = document.getElementById('letter-display');
      const letterCounter = document.getElementById('letter-counter');
      const prevBtn = document.getElementById('prev-btn');
      const nextBtn = document.getElementById('next-btn');

      if (currentLetters.length === 0) {
        letterDisplay.innerHTML = '<div class="empty-state">Pas encore de lettres dans cette cat√©gorie üíå</div>';
        letterCounter.textContent = 'Aucune lettre';
        prevBtn.disabled = true;
        nextBtn.disabled = true;
        return;
      }

      const letter = currentLetters[currentLetterIndex];

      letterDisplay.innerHTML = `
    <div class="letter-from">De : ${letter.from}</div>
    <div class="letter-message">${letter.message}</div>
    <div class="letter-date">${new Date(letter.createdAt).toLocaleDateString('fr-FR', {
        year: 'numeric',
        month: 'long',
        day: 'numeric'
      })}</div>
  `;

      letterCounter.textContent = `Lettre ${currentLetterIndex + 1} sur ${currentLetters.length}`;

      prevBtn.disabled = currentLetterIndex === 0;
      nextBtn.disabled = currentLetterIndex === currentLetters.length - 1;

      gsap.fromTo(letterDisplay,
        { opacity: 0, y: 15 },
        { opacity: 1, y: 0, duration: 0.5, ease: 'power2.out' }
      );
    }

    function navigateLetter(direction) {
      currentLetterIndex += direction;

      if (currentLetterIndex < 0) currentLetterIndex = 0;
      if (currentLetterIndex >= currentLetters.length) currentLetterIndex = currentLetters.length - 1;

      displayCurrentLetter();
    }

    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') closeModal();
    });

    document.getElementById('letter-modal').addEventListener('click', (e) => {
      if (e.target.id === 'letter-modal') closeModal();
    });
  </script>

