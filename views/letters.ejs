    }

    .nav-btn {
      flex: 1;
      background: linear-gradient(135deg, #ff1744, #ff4081);
      border: none;
      color: white;
      font-size: 1.1rem;
      font-weight: 600;
      padding: 1rem;
      border-radius: 50px;
      cursor: pointer;
      transition: all 0.3s ease;
      box-shadow: 0 8px 30px rgba(255, 23, 68, 0.5);
    }

    .nav-btn:hover:not(:disabled) {
      transform: translateY(-3px);
      box-shadow: 0 12px 40px rgba(255, 23, 68, 0.7);
    }

    .nav-btn:disabled {
      opacity: 0.3;
