    }

    .letter-date {
      font-family: 'Courier New', monospace;
      font-size: 1rem;
      color: rgba(255, 182, 193, 0.7);
      margin-top: 1.5rem;
      text-align: right;
    }

    .nav-buttons {
      display: flex;
