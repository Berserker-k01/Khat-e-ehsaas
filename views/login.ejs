    }

    #error-message {
      color: #ff6b6b;
      text-align: center;
      font-weight: 600;
      margin-top: 1rem;
      font-family: 'Caveat', cursive;
      font-size: 1.1rem;
    }

    .form-element {
      opacity: 0;
    }

    /* Particle effect */
