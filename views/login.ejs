    .form-footer a {
      color: #ff6b9d;
      font-weight: 700;
      text-decoration: none;
      transition: all 0.3s;
      text-shadow: 0 0 10px rgba(255, 107, 157, 0.5);
    }

    .form-footer a:hover {
      color: #ff4081;
